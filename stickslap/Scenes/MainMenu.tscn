[sub_resource type="CSharpScript" id="CSharpScript_bnhvo"]
script/source = "using Godot;
using System;

public partial class MainMenu : Control
{
	// Chemins vers vos scènes (à adapter)
	private const string GameScenePath = \"res://Scenes/(CHEMIN VERS LA SCèNE DE JEU).tscn\";
	private const string OptionsScenePath = \"res://Scenes/Options.tscn\";

	public override void _Ready()
	{
		// Récupération des boutons et connexion des signaux
		GetNode<Button>(\"VBoxContainer/btnStartGame\").Pressed += OnPlayPressed;
		GetNode<Button>(\"VBoxContainer/btnOptions\").Pressed += OnOptionsPressed;
		GetNode<Button>(\"VBoxContainer/btnQuitGame\").Pressed += OnQuitPressed;
	}

	private void OnPlayPressed()
	{
		// Chargement de la scène de jeu
		GetTree().ChangeScene(GameScenePath);
	}

	private void OnOptionsPressed()
	{
		// Chargement de la scène d’options
		GetTree().ChangeScene(OptionsScenePath);
	}

	private void OnQuitPressed()
	{
		// Quitter l’application
		GetTree().Quit();
	}
}
"

